{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="karoborder">Wer ist {{ user.name }}?</h1>
    <div class="floatleft">

        Nun, was wissen wir über {{ user.name }}?<br/>
        <div class="userimage">
            <img src="{{ user.picture }}">
        </div>
        Gravatar: <img src="{{ user.gravatar }}?default=http%3A%2F%2Fwww.karopapier.de%2Ffavicon.gif&size=40"><br/>
    </div>

    <div class="floatleft">

        Dabei seit: {{ user.signupdate|date("d.m.Y") }} ({{ user.signupdate|daysAgo }} Tage)<br/>
        Geburtstag: {{ user.birthday|date("d.m.Y") }}<br/>

        {% if user.invitor.id != 0 %}
            Wurde nachweislich von {{ user.invitor.login }} eingeladen.<br/>
        {% else %}
            Hat sich einfach so angemeldet.<br/>
        {% endif %}

        {% if user.isbot %}
            <b>Ist ein BOT</b><br/>
        {% endif %}
    </div>

    <div class="floatleft">
        {% if user.homepage %}
            Homepage: <a href=" {{ user.homepage }}"> {{ user.homepage }}</a><br/>
        {% endif %}

        {% if user.twitter %}
            twitter: <a href=" {{ user.twitter }}"> {{ user.twitter }}</a><br/>
        {% endif %}

        {% if user.shortInfo %}
            <b>Info:</b> {{ user.shortInfo }}<br/>
        {% endif %}
    </div>

    <div class="floatleft">
        Gefahren: {{ (distance)|round }} m<br/>
    </div>

